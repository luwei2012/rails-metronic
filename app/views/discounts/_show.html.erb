<div class="row-fluid">

  <div class="span12 blog-page">

    <div class="row-fluid">

      <div class="span12 article-block">

        <h1><%= @discount.title %></h1>

        <div class="blog-tag-data">

          <div class="span12">

            <% if @discount.documents.blank? %>

                <img src="<%= asset_path('image/image4.jpg') %>" style="height: 400px;" alt="">

            <% else %>

                <div id="myCarousel" class="carousel slide">

                  <div class="carousel-inner">

                    <% @discount.documents.each_with_index do |document, index| %>

                        <% if index == 0 %>

                            <div class="active item">

                              <img src="<%= document.original %>" alt="" style="height: 400px;width: 100%;">

                            </div>

                        <% else %>

                            <div class="item">

                              <img src="<%= document.original %>" alt="" style="height: 400px;width: 100%;">

                            </div>

                        <% end %>

                    <% end %>

                  </div>

                  <!-- Carousel nav -->

                  <a class="carousel-control left" href="#myCarousel" data-slide="prev">

                    <i class="m-icon-big-swapleft m-icon-white"></i>

                  </a>

                  <a class="carousel-control right" href="#myCarousel" data-slide="next">

                    <i class="m-icon-big-swapright m-icon-white"></i>

                  </a>

                </div>

            <% end %>

          </div>

        </div>

        <div class="row-fluid">

          <div class="span6">

            <ul class="unstyled inline blog-tags">

              <li>

                <% if @discount.hot %>
                    <i class="icon-tags"></i>
                    置顶
                <% end %>

                <% if not @discount.discount.blank?||@discount.discount=1.0 %>
                    <i class="icon-tags"></i>
                    <%= (@discount.discount.blank?) ? nil : @discount.discount*10 %>折
                <% end %>

                <% @discount.discount_types.each do |discount_type| %>

                    <i class="icon-tags"></i><%= discount_type.name %>

                <% end %>
              </li>

            </ul>

          </div>

          <div class="span6 blog-tag-data-inner">

            <ul class="unstyled inline">

              <li>
                <i class="icon-calendar"></i><%= (@discount.created_at.blank?) ? '2014年8月27日 0时0分' : @discount.created_at.strftime('%Y年%m月%d日 %H时%M分') %>
              </li>

              <li><i class="icon-thumbs-up"></i><%= (@discount.praises.blank?) ? '无' : @discount.praises.size %></li>

            </ul>

          </div>

        </div>

      </div>

      <!--end news-tag-data-->

      <div>

        <p><%= @discount.content %></p>

      </div>

    </div>

  </div>

  <div>

    <a href="/discounts/<%= @discount.id %>/edit" class="btn blue" data-remote="true" data-method="get" ><i class="icon-pencil"></i>
      编辑</a>

    <button type="button" class="btn black" onclick="history.go(-1);"><i class="icon-arrow-left"></i> 返回</button>

  </div>

</div>