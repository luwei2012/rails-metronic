<div id="confirm-modal" class="modal hide fade in">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span><span class="sr-only">关闭</span></button>
        <h3>确认删除</h3>
      </div>
      <div class="modal-body">
        <p id="question">
          Are you sure?
        </p>
      </div>
      <div class="modal-footer" style="background-color: #ffffff;bottom: 0px;">
        <a id="delete" href="javascript:;" class="btn red"
           data-method="delete" data-dismiss="modal"><span><i class="icon-trash icon-white">删除</i></span></a>
        <button type="button" class="btn green" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>

</div>